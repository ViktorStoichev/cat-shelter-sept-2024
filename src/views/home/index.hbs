<section class="cats">
    <ul>
        {{#each cats}}
        <li>
            <img src="{{imageUrl}}" alt="{{name}}">
            <h3>{{name}}</h3>
            <p><span>Breed: </span>{{breed}}t</p>
            <p><span>Description: </span>{{description}}</p>
            <ul class="buttons">
                <li class="btn edit"><a href="/cats/edit-cat/{{id}}">Change Info</a></li>
                <li class="btn delete"><a href="/cats/cat-shelter/{{id}}">New Home</a></li>
            </ul>
        </li>
        {{/each}}
    </ul>
</section>